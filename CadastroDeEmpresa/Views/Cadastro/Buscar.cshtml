@model IEnumerable<Empresa>

@{
    ViewData["Title"] = "Registros";
}

<h1 style="font: medium; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; font: 300; text-align: center">Empresas Cadastradas</h1>

<form asp-action="Remover" method="get">
    <table style="border-collapse: collapse; text-align: center">
        @foreach (var item in Model)
        {
            <thead>
                <tr>
                    <th style="border: 1px solid black;">CNPJ</th>
                    <th style="border: 1px solid black;">Nome</th>
                    <th style="border: 1px solid black;">Nome Fantasia</th>
                    <th style="border: 1px solid black;">Telefone</th>
                    <th style="border: 1px solid black;">Email</th>
                    <th style="border: 1px solid black;">Data de Abertura</th>
                    <th style="border: 1px solid black;">Porte</th>
                    <th style="border: 1px solid black;">Situação</th>
                    <th style="border: 1px solid black;">Logradouro</th>
                    <th style="border: 1px solid black;">Número</th>
                    <th style="border: 1px solid black;">Complemento</th>
                    <th style="border: 1px solid black;">Bairro</th>
                    <th style="border: 1px solid black;">Município</th>
                    <th style="border: 1px solid black;">CEP</th>
                    <th style="border: 1px solid black;">UF</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td style='display: none;'> @item.ID</td>
                    <td style="border: 1px solid black;">@item.CNPJ</td>
                    <td style="border: 1px solid black;">@item.Nome</td>
                    <td style="border: 1px solid black;">@item.Fantasia</td>
                    <td style="border: 1px solid black;">@item.Telefone</td>
                    <td style="border: 1px solid black;">@item.Email</td>
                    <td style="border: 1px solid black;">@item.Abertura</td>
                    <td style="border: 1px solid black;">@item.Porte</td>
                    <td style="border: 1px solid black;">@item.Situacao</td>
                    <td style="border: 1px solid black;">@item.Logradouro</td>
                    <td style="border: 1px solid black;">@item.Numero</td>
                    <td style="border: 1px solid black;">@item.Complemento</td>
                    <td style="border: 1px solid black;">@item.Bairro</td>
                    <td style="border: 1px solid black;">@item.Municipio</td>
                    <td style="border: 1px solid black;">@item.CEP</td>
                    <td style="border: 1px solid black;">@item.UF</td>
                    <td style="border: 1px solid black;"><button type="submit" style="background-color: #4CAF50;">@Html.ActionLink("Remover", "Remover", new { id = item.ID })</button></td>
                </tr>
            </tbody>
        }
    </table>
</form>